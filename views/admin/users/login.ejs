<%- include ('../../partials/header.ejs') %>


<div class="container">
    <div class="card mt-5">
        <div class="card-header text-center">
            <h2>Fazer login</h2>
        </div>
        <div class="card-body">
            <form action="/authenticate" method="POST">
                <h5>Email:</h5>
                <input class="form-control mb-3 mt-2" name="email" type="email" placeholder="email@exemplo.com">
                <h5>Senha:</h5>
                <input class="form-control mb-3 mt-2" name="password" type="password" placeholder="*****">
                <button type="submit" class="btn btn-dark btn-block">Entrar</button>
            </form>
        </div>
    </div>
</div>

